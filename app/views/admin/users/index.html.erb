<h1><%= t('.users_index_page') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.email') %></th>
      <th><%= t('.admin') %></th>
      <th><%= t('.tasks_number') %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.preload(:tasks).each do |user| %>
      <tr>
        <td><%= user.name  %></td>
        <td><%= user.email %></td>
        <% if user.admin == true  %>
          <td><%= "あり" %></td>
        <% else %>
          <td><%= "なし" %></td>
        <% end %>
        <td><%= user.tasks.count %></td>
        <td><%= link_to t('.show_user'), admin_user_path(user) ,class: 'show-user', class: "btn btn-info" %></td>
        <td><%= link_to t('.edit_user'), edit_admin_user_path(user),class: 'edit-user', class: "btn btn-info" %></td>
        <td><%= link_to t('.destroy_user'), admin_user_path(user) , class: 'destroy-user', method: :delete, data: { confirm: t('.are_you_sure?') }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>