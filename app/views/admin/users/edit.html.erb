<h1>ユーザ編集ページ</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>エラーが<%= pluralize(@user.errors.count, "件") %>発生しました</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:admin, @user], local: true) do |f| %>
  <div>
    <%= f.label :name, :名前  %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email, :メールアドレス %><br>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password, :パスワード %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation, :パスワード（確認） %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.label :admin, :管理者権限 %><br>
    <%= f.check_box :admin ,{}, true, false %>
  </div>
  <div>
    <%= f.submit "更新する", id: 'update-user' %>
  </div>
<% end %>

<%= link_to Task.human_attribute_name(:back), admin_users_path ,id: 'back' %>