<h1><%= Task.human_attribute_name(:tasks_index) %></h1>

<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= link_to Task.human_attribute_name(:show), task ,class: 'show-task' %></td>
        <td><%= link_to Task.human_attribute_name(:edit), edit_task_path(task),class: 'edit-task' %></td>
        <td><%= link_to Task.human_attribute_name(:destroy), task , class: 'destroy-task', method: :delete, data: { confirm: Task.human_attribute_name(:are_you_sure?) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>