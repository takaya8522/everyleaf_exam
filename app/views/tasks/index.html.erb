<h1><%= Task.human_attribute_name(:tasks_index) %></h1>

<%= form_with(scope: :search, method: :get, local: true) do |form| %>
  <div>
    <%= form.label Task.human_attribute_name(:status) %>
    <%= form.select :status, Task.statuses.keys, include_blank: "" %>
  </div>
  <div>
    <%= form.label Task.human_attribute_name(:title) %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.submit Task.human_attribute_name(:search),id: 'search_task' %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:content) %></th>
      <th><%= Task.human_attribute_name(:created_at) %></th>
      <th><%= link_to Task.human_attribute_name(:deadline_on), sort_deadline_on: true %></th>
      <th><%= link_to Task.human_attribute_name(:priority), sort_priority: true %></th>
      <th><%= Task.human_attribute_name(:status) %></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= task.deadline_on.strftime('%Y/%m/%d') %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to Task.human_attribute_name(:show), task ,class: 'show-task' %></td>
        <td><%= link_to Task.human_attribute_name(:edit), edit_task_path(task),class: 'edit-task' %></td>
        <td><%= link_to Task.human_attribute_name(:destroy), task , class: 'destroy-task', method: :delete, data: { confirm: Task.human_attribute_name(:are_you_sure?) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>