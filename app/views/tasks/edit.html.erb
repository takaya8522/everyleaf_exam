<h1><%= Task.human_attribute_name(:edit_task) %></h1>

<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div>
      <h2><%= @task.errors.count %>件のエラーが発生しました</h2>

      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit Task.human_attribute_name(:update_task),id: 'update-task' %>
  </div>

<% end %>

<%= link_to Task.human_attribute_name(:back), tasks_path ,id: 'back' %>
