<h1><%= t('.edit_task') %></h1>

<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div>
      <h2><%= @task.errors.count %>件のエラーが発生しました</h2>

      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :deadline_on %><br>
    <%= form.date_field :deadline_on %>
  </div>

  <div>
    <%= form.label :priority %><br>
    <%= form.select :priority, Task.priorities.keys, include_blank: "" %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, Task.statuses.keys, include_blank: "" %>
  </div>

  <div class="checkbox">
    <%= form.label :label %><br>
    <% Label.all.each do |label| %>
      <%= form.check_box :label_ids, { multiple: true, include_hidden: false }, label[:id] %>
      <%= label.name %>
    <% end %>
  </div>

  <div>
    <%= form.submit id: 'update-task', class: "btn btn-info" %>
  </div>

<% end %>

<%= link_to t('.back'), tasks_path ,id: 'back' %>