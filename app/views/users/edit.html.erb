<h1><%= t('.edit_page') %></h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>エラーが<%= pluralize(@user.errors.count, "件") %>件発生しました</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <div>
    <%= f.label :name, :名前  %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email, :メールアドレス %><br>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password, :パスワード %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation, :パスワード（確認） %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.submit id: 'update-user' %>
  </div>
<% end %>

<%= link_to t('.back'), user_path(current_user.id) ,id: 'back', class: "btn btn-info" %>